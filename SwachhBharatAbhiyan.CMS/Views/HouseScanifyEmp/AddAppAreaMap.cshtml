                contentType: 'application/json;',
                dataType: 'json',
                //traditional: true,
                success: function (data) {
                    console.log(data);
                    //$('#myModal_Image_House').modal('toggle');
                    //LoadGrid();

                    //$("#DumpSave_pop").html("QR Status Saved Successfully...").delay(2000).show().fadeOut('slow');

