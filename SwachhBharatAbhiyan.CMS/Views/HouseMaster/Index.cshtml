    <script>
        $(document).ready(function () {
            
            var AppName = $('#myAppName').val();
            if (AppName == "Appynitty") {
                //$("#complaint_menu").css("display", "block");
                $("#AH").css("display", "block");
                $('#AH').show();
            }
            else {
                $("#AH").css("display", "none");
                $('#AH').hide();
            }

        });
    </script>
    <input type="hidden" value="@Session["AppName"]" id="myAppName" />
