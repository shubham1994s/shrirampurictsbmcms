@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "HousescanifyEmp", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()



        <a class="nav-link logout" href="javascript:document.getElementById('logoutForm').submit()"> Log out<i class="fa fa-sign-out"></i></a>

    }
}

